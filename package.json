{
  "name": "js13kGames-bot",
  "description": "js13kGames automatic submission validation",
  "repository": "github:js13kGames/bot",
  "version": "2.1.0",
  "private": true,
  "type": "commonjs",
  "devDependencies": {
    "@sucrase/jest-plugin": "2.2.1",
    "@types/jest": "28.1.6",
    "@types/node": "18.6.3",
    "@vercel/ncc": "0.34.0",
    "dotenv": "16.0.1",
    "jest": "28.1.3",
    "prettier": "2.7.1",
    "serverless": "3.21.0",
    "serverless-scaleway-functions": "0.4.0",
    "sucrase": "3.24.0",
    "typescript": "4.7.4"
  },
  "workspaces": [
    "packages/**"
  ],
  "jest": {
    "transform": {
      "\\.(js|jsx|ts|tsx)$": "@sucrase/jest-plugin"
    },
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).ts"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "scripts": {
    "test": "jest --no-cache",
    "type": "tsc --noEmit",
    "lint": "prettier -c '**/*.{ts,tsx,js,jsx,json,md}' '!**/build/**'",
    "build": "( cd packages/lambda-bundle-analyzer ; pnpm build )",
    "deploy": "serverless deploy"
  }
}
